generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Booking {
  id          Int      @id @default(autoincrement())
  name        String
  address     String
  email       String
  phone       String
  serviceType String
  bedroom     String
  bathroom    String
  livingRoom  String
  toilet      String
  kitchen     String
  moreInfo    String
  price       String
  bookingDate String
  time        String
  createdAt   DateTime @default(now()) @db.Timestamp(6)
}
